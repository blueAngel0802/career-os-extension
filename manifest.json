{
  "manifest_version": 3,
  "name": "CareerOS Capture",
  "version": "0.2.1",
  "description": "Auto-open CareerOS panel on job pages; resilient to SPA re-renders.",
  "permissions": [
    "storage",
    "downloads"
  ],
  "host_permissions": [
    "http://localhost:8000/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ]
}